{# templates/blog/_comments.html.twig #}
<div class="comments-section">
    {% for comment in comments %}
        <div class="comment">
            <h4>{{ comment.name }}</h4>
            <p>{{ comment.text }}</p>
            <small>Publicado el {{ comment.publishedAt|date('d F Y H:i') }}</small>
        </div>
    {% else %}
        <p>No hay comentarios todav√≠a.</p>
    {% endfor %}
</div>
